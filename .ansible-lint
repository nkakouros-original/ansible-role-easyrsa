# vi: ft=yaml
---

# .ansible-lint
# exclude_paths:
  # - ../../../data/deps

# Enable checking of loop variable prefixes in roles
loop_var_prefix: "_{role_name}__"

use_default_rules: true

skip_list:
  - yaml  # yamllint will be run separately
  - fqcn-builtins

  # TODO disabled due to https://github.com/ansible/ansible-lint/issues/2079
  - no-loop-var-prefix

  # TODO not sure if we want to enabled this or not
  - no-log-password

  # TODO can we enable selected schemas and skip others (like for
  # meta/main.yml)?
  - schema

warn_list:
  - no-loop-var-prefix

# Any rule that has the 'opt-in' tag will not be loaded unless its 'id' is
# mentioned in the enable_list:
enable_list:
  - no-same-owner
  - no-log-password
  - empty-string-compare
  - key-order

# Offline mode disables installation of requirements.yml
offline: false

# List of additional kind:pattern to be added at the top of the default
# match list, first match determines the file kind.
kinds: []
  # - playbook: "**/examples/*.{yml,yaml}"
  # - galaxy: "**/folder/galaxy.yml"
  # - tasks: "**/tasks/*.yml"
  # - vars: "**/vars/*.yml"
  # - meta: "**/meta/main.yml"
  # - yaml: "**/*.yaml-too"
